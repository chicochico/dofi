[user]
    name = Francisco Chiang
    email = mail@fchiang.com
    signingkey = mail@fchiang.com
[init]
    defaultBranch = main
[push]
    autoSetupRemote = true
[alias]
    a = add
    aa = add .
    au = add --update
    b = branch
    bd = branch --delete
    c = commit
    ca = commit --amend
    cam = commit --amend --message
    cane = commit --amend --no-edit
    cm = commit --message
    cmp = "!f() { git commit --message \"\\\"$1\\\"\" && git push; }; f"
    cp = cherry-pick
    d = diff
    ds = diff --staged
    f = fetch
    i = init
    l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %Cblue<%an>%Creset' --abbrev-commit --date=relative
    m = merge
    o = checkout
    ob = checkout -b
    pl = pull
    pnr = pull --no-rebase
    pr = pull --rebase
    ps = push
    r = reset
    rb = rebase
    s = status
    w = worktree
    wa = worktree add
    waco = "!f() { git worktree add -b $1 $1 origin/$1; }; f"
    wl = worktree list
    wr = worktree remove
[includeIf "gitdir:~/tr/"]
    path = ~/.config/git/config-tr
