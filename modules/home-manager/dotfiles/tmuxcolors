# pane border styles
set -g pane-border-style fg=colour18,bg=colour00
set -g pane-active-border-style fg=colour08,bg=colour00
set -g pane-border-format ""
set -g pane-border-status off
set -g pane-border-lines heavy
set -g pane-border-indicators colour

# status
set -g status-position bottom
set -g status-justify left
set -g status-left-style fg=colour08
set -g status-left ""
set -g status-right-style fg=colour08
set -g status-right "#S â€¢ %I:%M"

# show status bar
set -g status on

# status bar style
set -g status-style bg=colour00,fg=colour07

# messages style
set -g message-style bg=colour00,fg=colour21

# window status style
set -g window-status-style fg=colour08
set -g window-status-current-style bg=colour00,fg=colour21
set -g window-status-activity-style fg=colour03
set -g window-status-separator "  "
set -g window-status-format "#{window_index}:#{window_name}#{?window_zoomed_flag,+,}#{?window_bell_flag,!,}"
set -g window-status-current-format "#{window_index}:#{window_name}#{?window_zoomed_flag,+,}#{?window_bell_flag,!,}"
